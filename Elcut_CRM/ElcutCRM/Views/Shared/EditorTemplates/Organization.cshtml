@model ElcutCRM.Data.Models.Organization
@using ElcutCRM.Helpers;
@using ElcutCRM.Data.Models;

@Html.HiddenFor(x => x.ID)

<div class="control-group">
    <label class="control-label" for="TypeID">
        Тип</label>
    <div class="controls">
        @Html.DropDownListFor(x => x.TypeID, new SelectList(Model.TypesList, "ID", "Name"))
    </div>
</div>

<div class="control-group">
    @Html.LabelFor(x => x.Name, new { @class = "control-label"})
    <div class="controls">
        @Html.TextBoxFor(x=> x.Name)
    </div>
</div>

<div class="control-group">
    <label class="control-label" for="CountryID">
        Страна</label>
    <div class="controls">
        @Html.DropDownListFor(x => x.CountryID, new SelectList(Model.CountriesList, "ID", "Name"))
    </div>
</div>

<div class="control-group">
    <label class="control-label" for="City">
        Город</label>
    <div class="controls">
        @Html.TextBoxFor(x => x.City)
    </div>
</div>

<div class="control-group">
    <label class="control-label" for="Address">
        Адрес</label>
    <div class="controls">
        @Html.TextBoxFor(x => x.Address)
    </div>
</div>

<div class="control-group">
    <label class="control-label" for="Index">
        Индекс</label>
    <div class="controls">
        @Html.TextBoxFor(x => x.Index)
    </div>
</div>

<div class="control-group">
    @Html.LabelFor(x => x.StatusKey, new { @class = "control-label"})
    <div class="controls">
        @Html.DictionaryDropDown(x => x.StatusKey, DictionaryEntry.ORGANIZATION_STATUS_DICTIONARY)
    </div>
</div>

<div class="control-group">
    @Html.LabelFor(x => x.RelationshipKey, new { @class = "control-label"})
    <div class="controls">
        @Html.DictionaryDropDown(x => x.RelationshipKey, DictionaryEntry.RELATIONSHIP_STATUS_DICTIONARY)
    </div>
</div>

<div class="control-group">
    <label class="control-label" for="Index">
        Сайт</label>
    <div class="controls">
        @Html.TextBoxFor(x => x.Site)
    </div>
</div>

<div class="control-group">
    <div class="controls">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</div>
