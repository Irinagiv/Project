@model IEnumerable<ElcutCRM.Data.Models.Order>
@using ElcutCRM.Helpers;

@if (Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>
                    Версия
                </th>
                <th>
                    Тип
                </th>
                <th>
                    Статус
                </th>
                <th>
                    
                </th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.VersionName, "Details", "Order", new { id = item.ID }, null)
                </td>
                <td>
                    @Html.ActionLink(item.OrderType.Name, "Details", "Order", new { id = item.ID }, null)
                </td>
                <td>
                    @Html.ActionLink(item.Status.Name, "Details", "Order", new { id = item.ID }, null)
                </td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#">Действие
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Просмотреть", "Details", new { id = item.ID })</li>
                            <li>@Html.ActionLink("Редактировать", "Edit", "Order", new { id = item.ID }, null) </li>
                            <li>@Ajax.ActionLink("Удалить", "DeleteOrder", "Order", new { id = item.ID }, new AjaxOptions
                           {
                               HttpMethod = "POST",
                               Confirm = "Удалить заказ?",
                               UpdateTargetId = "orderContainer"
                           }, null)</li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </table>
    <hr />
}
